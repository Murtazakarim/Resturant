                            android:buttonTint="#A66666"
                            android:text="Excellant"
                            android:textColor="@color/from_text_color"
                            android:textSize="16sp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:buttonTint="#A66666"
